# VQ8 Data Profiler Environment Configuration
# Copy this file to .env and customize as needed

# ==========================================
# Application Configuration
# ==========================================

# Working directory for temporary files and SQLite databases
WORK_DIR=/data/work

# Output directory for artifacts (JSON, CSV, HTML reports)
OUTPUT_DIR=/data/outputs

# Maximum disk space for spill files (in GB)
MAX_SPILL_GB=50

# Gaussian test method: dagostino, ks, jarque_bera
GAUSSIAN_TEST=dagostino

# ==========================================
# Build Metadata (auto-populated by CI/CD)
# ==========================================

GIT_COMMIT=dev
BUILD_DATE=unknown
VERSION=1.0.0

# ==========================================
# API Configuration
# ==========================================

# Log level: debug, info, warning, error, critical
LOG_LEVEL=info

# Log format: json, text
LOG_FORMAT=json

# CORS origins (comma-separated, use * for development only)
CORS_ORIGINS=http://localhost:4173,http://localhost:3000

# API settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_WORKERS=1
API_TITLE="VQ8 Data Profiler API"
API_VERSION=1.0.0

# ==========================================
# Processing Configuration
# ==========================================

DEFAULT_DELIMITER=|
BATCH_SIZE=10000
MAX_UPLOAD_SIZE_GB=10

# Performance Tuning
SQLITE_CACHE_SIZE_MB=256
STREAMING_BUFFER_SIZE_KB=64
PARALLEL_PROFILERS=false

# ==========================================
# Frontend Configuration
# ==========================================

VITE_API_URL=http://localhost:8000
VITE_POLLING_INTERVAL=2000

# ==========================================
# Security (v1 - local only)
# ==========================================

ENABLE_AUDIT_LOG=true
REDACT_PII_IN_LOGS=true
LOG_RETENTION_DAYS=30

# ==========================================
# Development Settings (optional)
# ==========================================

# Enable hot reload for API (dev only)
RELOAD=false

# Debug mode
DEBUG=false
TESTING=false

# ==========================================
# Security Notes
# ==========================================
# - Never commit this file with real secrets
# - PHI data expected: ensure /data is NOT committed
# - All uploaded files contain sensitive information
# - Audit logs stored in OUTPUT_DIR contain PII-aware redacted info